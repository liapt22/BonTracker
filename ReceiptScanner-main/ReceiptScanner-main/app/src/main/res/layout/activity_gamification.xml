<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_close"
                android:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="EcoGame"
                android:textColor="#1B5E20"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Reset"
                android:textColor="#2E7D32"
                android:backgroundTint="#C8E6C9"
                android:textStyle="bold"
                android:visibility="gone"/>
        </RelativeLayout>

        <!-- Panou principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="3dp">

            <!-- Nivel È™i progres -->
            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel 1"
                android:textColor="#2E7D32"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/progress_horizontal"
                android:indeterminate="false"/>

            <TextView
                android:id="@+id/tvXp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:text="0 / 100 XP"
                android:textColor="#4E342E" />

            <!-- Economii -->
            <TextView
                android:id="@+id/tvTotalSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Total economisit: 0 LEI"
                android:textColor="#1B5E20"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#BDBDBD"/>

            <!-- Insigne -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ… Insigne disponibile"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/containerBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#BDBDBD"/>

            <!-- Statistici -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Statistici"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/containerStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"/>

        </LinearLayout>

        <!-- Buton cheltuieli -->
        <Button
            android:id="@+id/btnMonthlyExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ðŸ’° Cheltuieli lunare"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
