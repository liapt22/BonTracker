<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Colțuri ușor rotunjite -->
            <corners android:radius="4dp"/>

            <!-- Culoare de fundal cu transparență -->
            <solid android:color="#33670A89"/> <!-- 20% din red_light -->

            <!-- Bordură subțire -->
            <stroke
                android:width="1dp"
                android:color="@color/purple_200"/>

            <!-- Padding intern -->
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>